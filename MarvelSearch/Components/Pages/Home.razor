@page "/"
@using MarvelSearch.Backend
@inject MarvelApi MarvelApi
@attribute [StreamRendering]

<PageTitle>Home</PageTitle>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

    @if (_results == null)
    {
        <p>Loading...</p>
    }
    else
    {
        @foreach (var result in _results.Data.Results)
        {
            <div class="col">
                <div class="card">
                    <img src="@result.Thumbnail.FullPath" class="card-img-top " alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@result.Name</h5>
                        <p class="card-text">@result.Description</p>
                    </div>
                </div>
            </div>
        }
    }

</div>

@code {
    private MarvelSearchResult? _results;

    protected override async Task OnInitializedAsync()
    {
        _results = await MarvelApi.Search("spider");
    }

}